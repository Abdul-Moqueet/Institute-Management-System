<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import com.jfoenix.controls.JFXButton?>
<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: transparent;"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.abdul_moqueet.my_alert.OkayAlert">
    <children>
        <Pane layoutX="7.0" layoutY="190.0" prefHeight="192.0" prefWidth="586.0"
              style="-fx-background-color: white; -fx-background-radius: 30;">
            <children>
                <VBox alignment="TOP_CENTER" layoutY="55.0" prefHeight="98.0" prefWidth="586.0">
                    <children>
                        <Label fx:id="text" text="Do u wanna exit?" textAlignment="JUSTIFY">
                            <font>
                                <Font name="Courgette Regular" size="20.0"/>
                            </font>
                            <VBox.margin>
                                <Insets top="15.0"/>
                            </VBox.margin>
                        </Label>
                        <HBox alignment="TOP_CENTER">
                            <children>
                                <JFXButton fx:id="btn_okay" buttonType="RAISED" prefHeight="25.0" prefWidth="82.0"
                                           style="-fx-background-color: #8B22CC;" text="Okay" textFill="WHITE">
                                    <HBox.margin>
                                        <Insets left="20.0"/>
                                    </HBox.margin>
                                </JFXButton>
                            </children>
                            <VBox.margin>
                                <Insets top="30.0"/>
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <effect>
                <DropShadow color="#00000083"/>
            </effect>
        </Pane>
    </children>
</AnchorPane>
